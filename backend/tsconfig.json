{
  "compilerOptions": {
    "target": "ES2024",
    "module": "node20",
    "moduleResolution": "node16",
    "outDir": "./dist",
    "allowJs": true,
    "strict": false,
    "noImplicitAny": false,
    "esModuleInterop": true,
    "skipLibCheck": true,
    "emitDecoratorMetadata": true,
    "experimentalDecorators": true,
    "forceConsistentCasingInFileNames": true
  },
  "include": ["./src", "templates", "./tests/integration"]
}
